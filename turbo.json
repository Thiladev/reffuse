{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["./src/**"],
      "outputs": ["./dist/**"]
    },
    "pack": {
      "dependsOn": ["pack"]
    },
    "publish": {
      "dependsOn": ["publish"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
